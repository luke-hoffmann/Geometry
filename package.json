{
  "name": "geometry",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "clean": true,
    "minify": true,
    "dts": true,
    "format": [
      "iife", "esm"
    ],
    "target": "es2022",
    "globalName": "geometry",
    "platform": "browser",
    "external": [
      "usefulfunction",
      "colorhandler",
      "p5"
    ],
    "treeshake": true
  },

  "scripts": {
    "build": "tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luke-hoffmann/Geometry.git"
  },
  "author": "Luke Hoffmann",
  "license": "ISC",
  "homepage": "https://github.com/luke-hoffmann/Geometry#readme",
  "dependencies": {
    "colorhandler": "github:luke-hoffmann/colorhandler",
    "usefulfunction": "github:luke-hoffmann/usefulfunction"
  },
  "devDependencies": {
    "@types/p5": "^1.7.7",
    "p5": "^2.1.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
